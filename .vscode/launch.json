{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug main.go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/src",
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Debug current file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Debug test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/src",
            "args": ["-test.v"]
        }
    ]
}
